@model Dictionary<int, Book>

<h2>Lista książek</h2>
<table class="table">
    <tr>
        <th>Tytuł</th>
        <th>Autor</th>
        <th>Akcje</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Value.Title</td>
            <td>@item.Value.Author</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-controller="Book" asp-route-id="@item.Value.Id">Edytuj</a>
                <a class="btn btn-primary" asp-action="Details" asp-controller="Book" asp-route-id="@item.Value.Id">Szczegóły</a>
                <a class="btn btn-primary" asp-action="Delete" asp-controller="Book" asp-route-id="@item.Value.Id">Usuń</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-success" asp-action="Create" asp-controller="Book">Dodaj nową książkę</a>