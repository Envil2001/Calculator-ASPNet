@model WebApp.Models.Book

<h2>Szczegóły książki</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Tytuł</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Author</dd>
        <dt class="col-sm-2">Liczba stron</dt>
        <dd class="col-sm-10">@Model.PageCount</dd>
        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>
        <dt class="col-sm-2">Rok wydania</dt>
        <dd class="col-sm-10">@Model.YearPublished</dd>
        <dt class="col-sm-2">Wydawnictwo</dt>
        <dd class="col-sm-10">@Model.Publisher</dd>
    </dl>
</div>
<a class="btn btn-primary" asp-action="Index">Powrót do listy</a>