@model List<WebApp.Models.Contact>

<h2>Lista kontaktów</h2>
<table class="table">
    <tr>
        <th>Imię</th>
        <th>Email</th>
        <th>Priorytet</th>
        <th>Akcje</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Email</td>
        <td>@item.Priority.GetDisplayName()</td>
        <td>
            <a class="btn btn-primary" asp-action="Edit" asp-controller="Contact" asp-route-id="@item.Id">Edytuj</a>
            <a class="btn btn-primary" asp-action="Details" asp-controller="Contact" asp-route-id="@item.Id">Szczegóły</a>
            <a class="btn btn-primary" asp-action="Delete" asp-controller="Contact" asp-route-id="@item.Id">Usuń</a>
        </td>
    </tr>
    }
</table>
<a class="btn btn-success" asp-action="Create" asp-controller="Contact">Dodaj nowy kontakt</a>