@model List<ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary rounded-2" asp-action="Create" asp-controller="Contact">Dodaj kontakt</a>
<h4>Lista kontaktów</h4>

@if(Model.Count > 0) {
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(m => m[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m[0].Category)
        </th>
        <th>
            Operacje
        </th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var entry in @Model)
    {
        <tr>
            <td>
                @entry.FirstName
            </td>
            <td>
                @entry.LastName
            </td>
            <td>
                @entry.Category.GetDisplayName()
            </td>
            <td>
                <div class="float-end">
                    <a class="btn btn-primary" asp-route-id=@entry.Id asp-action="Edit" asp-controller="Contact">Edycja</a>
                    <a class="btn btn-info" asp-route-id=@entry.Id asp-action="Details" asp-controller="Contact">Szczegoły</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Contact" asp-route-id="@entry.Id">Usuń</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
}
else
{
    <h2 class="text-danger">Na razie brak kontaktów!</h2>
}