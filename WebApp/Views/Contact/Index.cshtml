@model System.Collections.Generic.Dictionary<int,WebApp.Models.ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary rounded-2" asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>
<h4>Lista kontaktów</h4>
<table class="table">
    <thead>
    <tr>
        <th>
            Imie
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Akcje
        </th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var entry in @Model)
    {
        <tr>
            <td>
                @entry.Value.FirstName
            </td>
            <td>
                @entry.Value.LastName
            </td>
            <td>
                <div>
                    <a class="btn btn-primary">Edycja</a>
                    <a class="btn btn-dark">Szczegoły</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Contact" asp-route-id="@entry.Key">Usuń</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
