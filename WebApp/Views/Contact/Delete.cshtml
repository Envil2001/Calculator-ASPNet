@model WebApp.Models.Contact

<h2>Czy na pewno chcesz usunąć ten kontakt?</h2>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Priorytet</dt>
        <dd class="col-sm-10">@Model.Priority.GetDisplayName()</dd>

        <dt class="col-sm-2">Data utworzenia</dt>
        <dd class="col-sm-10">@Model.Created.ToString("dd.MM.yyyy HH:mm")</dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a class="btn btn-secondary" asp-action="Index">Anuluj</a>
</form>