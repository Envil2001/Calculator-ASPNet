@model WebApp.Models.Contact

<h2>Usuń kontakt</h2>

<h3>Czy na pewno chcesz usunąć ten kontakt?</h3>
<div>
    <h4>Kontakt</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Imię</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Data urodzenia</dt>
        <dd class="col-sm-10">@Model.Birth.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>